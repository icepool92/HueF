<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.SolidColorInputPromptController">
   <center>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <AnchorPane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="red" layoutX="15.0" layoutY="4.0" prefHeight="25.0" prefWidth="70.0" promptText="Red Value" />
               </children>
            </AnchorPane>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1">
               <children>
                  <TextField fx:id="green" layoutX="15.0" layoutY="4.0" prefHeight="25.0" prefWidth="70.0" promptText="Green Value" />
               </children>
            </AnchorPane>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="2">
               <children>
                  <TextField fx:id="blue" layoutX="14.0" layoutY="4.0" prefHeight="25.0" prefWidth="70.0" promptText="Blue Value" />
               </children>
            </AnchorPane>
         </children>
      </GridPane>
   </center>
   <bottom>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="Accept" layoutX="184.0" layoutY="6.0" mnemonicParsing="false" onAction="#acceptPressed" text="Accept" />
            <Button fx:id="Cancel" layoutX="248.0" layoutY="6.0" mnemonicParsing="false" text="Cancel" />
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
