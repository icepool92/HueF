<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="menuWindow" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.MenuBarWindowController">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem fx:id="open" mnemonicParsing="false" text="Open..." />
                  <MenuItem fx:id="save" disable="true" mnemonicParsing="false" onAction="#savePressed" text="Save..." />
                  <MenuItem fx:id="export" disable="true" mnemonicParsing="false" text="Export..." />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="New">
            <items>
              <MenuItem id="createNew" fx:id="createNewCanvas" mnemonicParsing="false" onAction="#createNewCanvasPressed" text="New Canvas" />
              <MenuItem fx:id="createNewPaletteColor" mnemonicParsing="false" onAction="#createNewPaletteColorPressed" text="New Palette Color" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </children>
</AnchorPane>
